black  = #333
grey   = #444
active = #555
white  = #f5f5f5

body
  background-color white
  margin 0
  padding 0
  overflow-x hidden

nav
  box-shadow 0 1px 1px #000
  box-sizing border-box
  width 100%
  height 64px
  background-color black
  padding 0 20px
  font-size 48px
  line-height 64px
  display inline-block
  img
    height 64px
  input[type='text']
    display inline-block
    border 1px #222 solid
    border-radius 5px
    font-size 32px
    line-height 64px
    margin 1px
    text-align center
    padding 0
    outline 0
    height 60px
    width 40%
    top 0
    right 20px
    position absolute
    color white
    background-color grey
    transition-property background-color
    transition-duration 0.5s
    &:focus, &:hover
      background-color #484848
      border 1px #252525 solid

.results
  display flex
  margin 20px
  justify-content center
  flex-direction row
  flex-wrap wrap

.card
  box-shadow 0 0 1px black
  flex 0 1 auto
  margin 20px
  width 300px
  content ' '
  background-color #fff
  img
    width 300px

