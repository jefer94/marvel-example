black  = #282C34
grey   = #444
blue   = #568AF2
white  = #f5f5f5

body
  background-color white
  margin 0
  padding 0
  overflow-x hidden

nav
  box-shadow 0 1px 1px #000
  box-sizing border-box
  width 100%
  height 64px
  background-color black
  padding 0 20px
  font-size 48px
  line-height 64px
  display inline-block
  img
    height 64px
  input[type='text']
    display inline-block
    border none
    border-bottom 2px #555 solid
    border-radius 0px
    font-size 26px
    line-height 64px
    margin 1px
    text-align center
    padding 0
    outline 0
    height 60px
    width 40%
    top 0
    right 20px
    position absolute
    color transparent
    text-shadow 0 0 0 white
    background-color black
    transition-property border-bottom
    transition-duration 0.2s
    &:focus
      border-bottom 2px blue solid
      outline none

.results
  display flex
  margin 20px
  justify-content center
  flex-direction row
  flex-wrap wrap

.card
  box-shadow 0 0 1px black
  flex 0 1 auto
  margin 20px
  width 300px
  content ' '
  background-color #fff
  p
    max-height 300px
    overflow-y hidden
  img
    width 300px
  p, h1, h2, h3, h4, h5, h6, span, a
    padding 0 20px
  h1, h2, h3, h4, h5, h6
    text-align center
  p, span, a
    text-align justify

.shop
  width 600px
  height 440px
  background-color #fff
  display block
  position absolute
  z-index 255
  box-shadow 0 0 2px black
  content ' '
  left 50%
  top 50%
  margin -220px 0 0 -300px
  display inline-block
.text
  float right
  width 300px
  height 440px
  display inline-block
#look
  width 289.88px
  height 440px
  overflow-x hidden
#close
  opacity 0.7
  position absolute
  right 0
  border none
  padding 10px
  margin 0
  outline 0
  background-color transparent
#buy, #add, #favorite
  opacity 0.7
  position absolute
  right 0
  border none
  padding 10px
  margin 0
  outline 0
  background-color transparent
  img
    width 20px
  span
    font-size 25px

#buy
  right 0
  bottom 0px
#add
  right 0
  bottom 63px
#favorite
  right 0
  bottom 126px
.delete
  text-align center
  display inline-block
  width 280px
  margin 15px 10px
  box-sizing border-box
  padding 20px
  color #fff
  background-color #d32f2f

.hide
  display none
